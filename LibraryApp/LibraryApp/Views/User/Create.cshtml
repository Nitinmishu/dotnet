@model Library.Common.LoginUser

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3"> Add User</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Username"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Firstname"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Lastname"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Mobile"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmaiId"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-4">

                    </div>
                    <div class="col-4">
                        <input asp-for="EmaiId" class="form-control" />
                        <span asp-validation-for="EmaiId" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Address" class="form-control" />
                        
                    </div>
                    <div class="col-4">
                        <input type="submit" class="btn btn-info" value="Create" /> <a asp-action="Index" class="btn btn-danger">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
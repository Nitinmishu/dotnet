                    </div>
                    <div class="col-4">

                    </div>
                    <div class="col-4">
                        <input asp-for="EmaiId" class="form-control" disabled/>
                    </div>
                    <div class="col-4">
                        <input asp-for="Address" class="form-control" disabled/>

                    </div>
                    <div class="col-4">
                        <input type="submit" class="btn btn-danger" value="Delete" /> <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
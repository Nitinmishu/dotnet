@model IEnumerable<Library.Common.Book>
@using System.Globalization;
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Book List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Add Book</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Book Name
                    </th>
                    <th>
                        Publisher Name
                    </th>

                    <th>
                        Author Name
                    </th>
                    <th>
                        Published Date
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Version
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.BookName </td>
                        <td> @item.PublisherName</td>
                        <td> @item.AutherName </td>
                        <td> @item.PublishedDate.ToString("dd-MM-yyyy", CultureInfo.InvariantCulture)   </td>
                        <td> @item.Quantity   </td>
                        <td> @item.Version  </td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Book" asp-action="Update" asp-route-UserId="@item.BookId" class="btn btn-primary m-1">Update</a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-UserId="@item.BookId" class="btn btn-danger m-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
